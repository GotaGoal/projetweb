{% extends "BDEPlatformBundle:Template:layout.html.twig" %}
{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="{{ asset('css/moncompte.css') }}"/>
{% endblock stylesheets %}

{% block all %}
	    <div class="all" style="display: flex; justify-content: center; " >
	    	<form method="post" action="{{ path('bde_moncompte') }}">
      <fieldset style="margin-top: 5%;">
      	
        <legend align="center" style="margin-bottom: 5%;">Profil</legend>
        <label for="name" >Nom</label>
        <input type="text" id="name" name="user_nom" value="{{ user.nom }}">
        <label for="name" >Prenom</label>
        <input type="text" id="name" name="user_prenom" value="{{ user.prenom }}">
        <label for="mail" >Email</label>
        <input type="email" id="mail" name="user_email" value="{{ user.email }}">
        <legend align="center" style="margin-bottom: 5%;">Mot de passe</legend>
        <label for="password">Mot de passe actuel</label>
        <input type="password" id="password" name="user_password" value="">
        <label for="password">Nouveau mot de passe:</label>
        <input type="password" id="password" name="user_password" value="">
        <label for="password">Confirmation:</label>
        <input type="password" id="password" name="user_password" value="">
        <legend align="center" style="margin-bottom: 5%;">Avatar</legend>
        <div class="container">
          <img  src="{{ asset(''~ user.avatar ~'') }}" align="center" type="button" class="file-input" accept=".jpg,.jpeg,.png,.gif" style="width:150px;" id="testimage">
          <div class="middle" style="">
            <input type="file" class="file-input" accept=".jpg,.jpeg,.png,.gif" style="min-height: 100%; width: 100%; opacity: 0; cursor: pointer; " value="Changer">
            <div id="change" style=" position: relative; top:-60%; width: 110%; flex-direction: column; justify-content: center;cursor: pointer;" align="middle" vertical-align="center" >Changer</div>
          </div>
        </div>
        <button>
        Enregistrer
        </button>
        <small class="size-info">
        Taille minimum :
        <strong>128x128
        </strong>
        </small>
        </form>


      </div>
    </div>
  </fieldset>
</div>
	{% endblock all %}